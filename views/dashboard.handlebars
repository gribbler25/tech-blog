{{!-- dashboard for same header and all blogs assoc with the logged-in user's id(session.id)incuding comments.
button to add a blog at bottom. --}}


{{#if blogs.length}}
<section>
  <h2>Your Blogs</h2>

  <ol class="blog-list">
     {{#each blogs as |blog|}}
  <li>
    
    <article class="blog">
      <div class="title-blog">
        <h2>{{title}}</h2>
        <p>{{blog_text}}</p>
      </div>

      <div class="meta">
     
        {{format_date createdAt}}
        |
      <a id="update-btn" href="/api/edit/{{id}}">Update this blog</a>
      </div>
  {{>comments blog.comments}}
    </article>
    <button id="delete-btn" type="click" data-id="{{id}}">Delete this blog</button>
   
  </li>
  {{/each}}
  </ol>
</section>
{{/if}}

