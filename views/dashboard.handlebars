{{!-- dashboard for same header and all blogs assoc with the logged-in user's id(session.id)incuding comments.
button to add a blog at bottom. --}}


{{#if blogs.length}}
<section>
  <h2>Your Blogs</h2>
  <ol class="blog-list">
     {{#each blogs as |blog|}}
  <li>
    
    <article class="blog">
      <div class="title-blog">
        <h2>{{title}}</h2>
        <p>{{blog_text}}</p>
      </div>

      <div class="meta">
        {{!-- by {{username}} on --}}
        {{created_at}}
        |
      
      </div>
  {{>comments blog.comments}}
    </article>
  </li>
  {{/each}}
  </ol>

</section>
{{/if}}

<button class="addBlog-btn"><a href="/addBlog">&#43; Add Blog</a></button>

<script src="/javascript/addBlog.js"></script>